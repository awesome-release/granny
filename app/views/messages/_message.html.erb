<div id="<%= dom_id(message) %>_messages">
  <% if message.user? %>
    <div class="bg-sky-400 rounded-lg m-2 mx-20 text-white p-2">
      <%= message.content %>
    </div>
  <% else %>
    <div class="bg-gray-200 rounded-lg m-2  mx-20 p-2">
      <%= message.content %>
    </div>
  <% end %>
</div>