<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="bg-white p-10 rounded shadow-xl w-1/4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "") do |f| %>
      <div class="flex flex-col space-y-2">
        <%= f.label :email, class: "block text-lg" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", value: "foo@bar.com", class: "block w-full p-2 border border-gray-300 rounded" %>
      </div>

      <div class="flex flex-col space-y-2">
        <%= f.label :password, class: "block text-lg" %>
        <%= f.password_field :password, autocomplete: "current-password", value: "foobar", class: "block w-full p-2 border border-gray-300 rounded" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center space-x-2">
          <%= f.check_box :remember_me, class: "form-checkbox" %>
          <%= f.label :remember_me, class: "text-lg" %>
        </div>
      <% end %>

      <div>
        <%= f.submit "Log in", class: "block w-full p-2 text-white bg-blue-600 rounded hover:bg-blue-700" %>
      </div>
    <% end %>
  </div>
</div>
